<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h3>Name: <%= @recipe.name %></h3>
  <p>
    <label for="recipe_name">Update Name: </label>
    <input id="name" type="text" name="name">
  </p>
  <h3>Ingredients: <%= @recipe.ingredients %></h3>
  <p>
    <label for="recipe_ingredients">Update Ingredients: </label>
    <textarea id="ingredients" type="text" name="ingredients"></textarea>
  </p>
  <h3>Cook Time: <%= @recipe.cook_time %></h3>
  <p>
    <label for="cook_time">Update Cook Time: </label>
    <input id="cook_time" type="text" name="cook_time">
  </p>
  <input type="submit" value="submit">
</form>