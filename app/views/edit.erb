<h1>Edit the recipe below:</h1>
  <form action="/recipes/<%=@recipe.id%>" method="post">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <p>Name: <input type="text" name="name" value=<%=@recipe.name%>></p>
   <p>Ingredients: <input type="text" name="ingredients" value=<%=@recipe.ingredients%>></p>
   <p>Cook time: <input type="text" name="cook_time" value=<%=@recipe.cook_time%>></p>
   <input type="submit" value="submit">
  </form>

  <form method="POST" action="/recipes/<%=@recipe.id%>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" name="delete" value="delete">
  </form>

</div>