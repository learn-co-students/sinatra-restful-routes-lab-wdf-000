<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <h2><%= @recipe.name %></h2>
    <label for="recipe_name">Update Name: </label>
    <input id="name" type="text" name="recipe[name]">
  </p>
    <h2><%= @recipe.ingredients %></h2>
  <p>
    <label for="recipe_ingredients">Update Ingredients: </label>
    <textarea id="ingredients" type="text" name="recipe[ingredients]"></textarea>
  </p>
  <p>
    <label for="cook_time">Update Cook Time: </label>
    <textarea id="cook_time" type="text" name="recipe[cook_time]"></textarea>
  </p>
  <input type="submit" value="submit">
</form>