<% if @recipes.empty? %>
  There are no recipes to display. Would you like to <a href="/recipes/new">make one</a>?
<% else
     @recipes.each do |recipe| %>
      <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
      <p>Ingredients: <%= recipe.ingredients %></p>
      <p>Cooking Time: <%= recipe.cook_time %></p>
  <% end %>
<% end %>
